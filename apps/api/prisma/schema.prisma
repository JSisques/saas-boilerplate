generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

enum RoleEnum {
  ADMIN
  USER
}

enum StatusEnum {
  ACTIVE
  INACTIVE
  BLOCKED
}
model User {
  id        String  @id @default(uuid())
  userName  String?
  name      String?
  lastName  String?
  bio       String?
  avatarUrl String?
  role      RoleEnum
  status    StatusEnum
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Audit {
  id        String  @id @default(uuid())
  eventType String
  aggregateType String
  aggregateId String
  payload Json? 
  timestamp DateTime @default(now())
}