# Environment
NODE_ENV=development

# Server
PORT=4100
FRONTEND_URL=http://localhost:3000

# Database - PostgreSQL
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=saas_db
DATABASE_URL=postgresql://postgres:postgres@postgres-db:5432/saas_db?schema=public

# Database - MongoDB
MONGODB_USERNAME=mongo
MONGODB_PASSWORD=mongo
MONGODB_DATABASE=saas_db
MONGODB_URL=mongodb://mongo:mongo@mongodb:27017/saas_db?authSource=admin

# JWT - Access Token
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production-min-32-characters
JWT_ACCESS_EXPIRATION=15m

# JWT - Refresh Token
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-characters
JWT_REFRESH_EXPIRATION=7d

